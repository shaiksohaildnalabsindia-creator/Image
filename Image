<body>

<h2>Upload Parcel Image</h2>

<label><b>Select Tracking Number</b></label><br>
<select id="tracking" style="padding:10px; font-size:16px; width:250px;">
  <option value="">Enter Tracking Number</option>
</select>

<br><br>

<input type="file" id="imageInput" accept="image/*" capture="environment">

<br><br>

<img id="preview">

<br><br>

<button id="uploadBtn">Upload Image</button>
<p id="status"></p>

<script>
const WEB_APP_URL = "https://script.google.com/macros/s/AKfycbzvWsLwV2ycdiYnPAZdEDbqu9rvkKaFAJIhgETJ8JHQRaeMugOWsDF_6-bUgabSCzBsZg/exec"; // replace with your deployed Apps Script URL

const trackingSelect = document.getElementById("tracking");
const imageInput = document.getElementById("imageInput");
const preview = document.getElementById("preview");
const statusEl = document.getElementById("status");

let imageBase64 = "";

/* IMAGE PREVIEW */
imageInput.addEventListener("change", () => {
  const file = imageInput.files[0];
  if (!file) return;
  const reader = new FileReader();
  reader.onload = () => {
    imageBase64 = reader.result;
    preview.src = imageBase64;
    preview.style.display = "block";
  };
  reader.readAsDataURL(file);
});

/* UPLOAD IMAGE */
document.getElementById("uploadBtn").addEventListener("click", async () => {
  const tracking = trackingSelect.value.trim();
  if (!tracking || !imageBase64) {
    alert("Select a tracking number and image first!");
    return;
  }

  statusEl.textContent = "Uploading...";

  try {
    const res = await fetch(WEB_APP_URL, {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ tracking: tracking, image: imageBase64 })
    });

    const data = await res.json();

    if (data.status === "success") {
      statusEl.innerHTML = `Image uploaded successfully ✅ <br><a href="${data.url}" target="_blank">View Image</a>`;
      imageInput.value = "";
      preview.style.display = "none";
    } else {
      statusEl.textContent = "Upload failed ❌: " + data.message;
    }
  } catch(err) {
    console.error(err);
    statusEl.textContent = "Upload error ❌";
  }
});

/* OPTIONAL: preload tracking numbers */
/* You can fetch today's tracking numbers using another GET endpoint if you have one */
// Example:
// fetch(`${WEB_APP_URL}?action=today`).then(res => res.json()).then(list => {
//   list.forEach(t => {
//     const opt = document.createElement("option");
//     opt.value = t;
//     opt.textContent = t;
//     trackingSelect.appendChild(opt);
//   });
// });
</script>

